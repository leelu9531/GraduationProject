<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/SSID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SSID Field"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/detectTime"
        android:layout_toEndOf="@+id/detectTime"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <TextView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSSI Field"
        android:layout_alignTop="@+id/MAC"
        android:layout_alignLeft="@+id/SSID"
        android:layout_alignStart="@+id/SSID" />

    <TextView
        android:id="@+id/MAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC Address"
        android:layout_below="@+id/SSID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/detectTime"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_alignTop="@+id/SSID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#6787be" />

</RelativeLayout>